<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="reporte_inventario_materiales" pageWidth="595" pageHeight="842"
              columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="20" bottomMargin="20">

    <!-- PARÁMETROS -->
    <parameter name="fechaReporte" class="java.lang.String"/>
    <parameter name="totalMateriales" class="java.lang.Integer"/>

    <!-- CAMPOS (datos consolidados por material) -->
    <field name="materialNombre" class="java.lang.String"/>
    <field name="cantidadTotal" class="java.math.BigDecimal"/>
    <field name="precioPromedio" class="java.math.BigDecimal"/>
    <field name="ultimaFecha" class="java.time.LocalDate"/>
    <field name="numeroAcopios" class="java.lang.Integer"/>

    <!-- TÍTULO DEL REPORTE -->
    <title>
        <band height="110">
            <!-- Logo FAJTO -->
            <image scaleImage="RetainShape" hAlign="Center">
                <reportElement x="10" y="0" width="100" height="50"/>
                <imageExpression><![CDATA["images/logo_fajto.png"]]></imageExpression>
            </image>

            <!-- Fondo del título -->
            <rectangle>
                <reportElement x="0" y="0" width="535" height="70" backcolor="#2C3E50"/>
                <graphicElement><pen lineWidth="0"/></graphicElement>
            </rectangle>

            <!-- Título principal -->
            <staticText>
                <reportElement x="120" y="10" width="405" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE INVENTARIO DE MATERIALES]]></text>
            </staticText>

            <!-- Subtítulo -->
            <staticText>
                <reportElement x="120" y="35" width="405" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Resumen Consolidado de Materiales Acopiados]]></text>
            </staticText>

            <!-- Fecha del reporte -->
            <staticText>
                <reportElement x="0" y="80" width="80" height="15"/>
                <textElement><font size="9" isBold="true"/></textElement>
                <text><![CDATA[FECHA:]]></text>
            </staticText>
            <textField>
                <reportElement x="80" y="80" width="200" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{fechaReporte}]]></textFieldExpression>
            </textField>

            <!-- Total materiales -->
            <staticText>
                <reportElement x="350" y="80" width="110" height="15"/>
                <textElement><font size="9" isBold="true"/></textElement>
                <text><![CDATA[TOTAL MATERIALES:]]></text>
            </staticText>
            <textField>
                <reportElement x="460" y="80" width="65" height="15"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{totalMateriales}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- CABECERA DE COLUMNAS -->
    <columnHeader>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="5" width="535" height="18" backcolor="#34495E"/>
                <graphicElement><pen lineWidth="0"/></graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="5" y="7" width="120" height="14" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Material]]></text>
            </staticText>

            <staticText>
                <reportElement x="130" y="7" width="90" height="14" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Cantidad Total (g)]]></text>
            </staticText>

            <staticText>
                <reportElement x="225" y="7" width="80" height="14" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Precio Prom. (S/.)]]></text>
            </staticText>

            <staticText>
                <reportElement x="310" y="7" width="70" height="14" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[# Acopios]]></text>
            </staticText>

            <staticText>
                <reportElement x="385" y="7" width="145" height="14" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Último Acopio]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- DETALLE (cada material) -->
    <detail>
        <band height="22">
            <!-- Alternar color de fondo -->
            <rectangle>
                <reportElement x="0" y="0" width="535" height="20" backcolor="#F8F9FA">
                    <printWhenExpression><![CDATA[new Boolean($V{REPORT_COUNT}.intValue() % 2 == 0)]]></printWhenExpression>
                </reportElement>
                <graphicElement><pen lineWidth="0"/></graphicElement>
            </rectangle>

            <textField>
                <reportElement x="5" y="3" width="120" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{materialNombre}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="130" y="3" width="90" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{cantidadTotal}]]></textFieldExpression>
            </textField>

            <textField pattern="'S/.' #,##0.00">
                <reportElement x="225" y="3" width="80" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{precioPromedio}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="310" y="3" width="70" height="14"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{numeroAcopios}]]></textFieldExpression>
            </textField>

            <textField pattern="dd/MM/yyyy" isBlankWhenNull="true">
                <reportElement x="385" y="3" width="145" height="14"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ultimaFecha}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="20" width="535" height="1"/>
                <graphicElement><pen lineStyle="Dotted" lineColor="#CCCCCC"/></graphicElement>
            </line>
        </band>
    </detail>

    <!-- PIE DE PÁGINA -->
    <summary>
        <band height="50">
            <staticText>
                <reportElement x="0" y="15" width="535" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[*** Reporte generado por Sistema de Acopio de Minerales FAJTO ***]]></text>
            </staticText>
        </band>
    </summary>

</jasperReport>
