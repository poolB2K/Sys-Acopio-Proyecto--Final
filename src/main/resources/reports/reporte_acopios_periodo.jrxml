<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="reporte_acopios_periodo" pageWidth="595" pageHeight="842"
              columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="20" bottomMargin="20">

    <!-- PARÁMETROS -->
    <parameter name="fechaInicio" class="java.lang.String"/>
    <parameter name="fechaFin" class="java.lang.String"/>
    <parameter name="totalGeneral" class="java.math.BigDecimal"/>
    <parameter name="cantidadAcopios" class="java.lang.Integer"/>

    <!-- CAMPOS (de cada acopio) -->
    <field name="numeroAcopio" class="java.lang.String"/>
    <field name="fechaAcopio" class="java.time.LocalDate"/>
    <field name="proveedor.nombreCompleto" class="java.lang.String"/>
    <field name="totalPagar" class="java.math.BigDecimal"/>
    <field name="estado" class="java.lang.String"/>

    <!-- TÍTULO DEL REPORTE -->
    <title>
        <band height="120">
            <!-- Logo FAJTO -->
            <image scaleImage="RetainShape" hAlign="Center">
                <reportElement x="10" y="0" width="100" height="50"/>
                <imageExpression><![CDATA["images/logo_fajto.png"]]></imageExpression>
            </image>

            <!-- Fondo del título -->
            <rectangle>
                <reportElement x="0" y="0" width="535" height="70" backcolor="#2C3E50"/>
                <graphicElement><pen lineWidth="0"/></graphicElement>
            </rectangle>

            <!-- Título principal -->
            <staticText>
                <reportElement x="120" y="10" width="405" height="25" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE ACOPIOS POR PERIODO]]></text>
            </staticText>

            <!-- Subtítulo -->
            <staticText>
                <reportElement x="120" y="35" width="405" height="15" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Lista Consolidada de Acopios]]></text>
            </staticText>

            <!-- Periodo -->
            <staticText>
                <reportElement x="0" y="80" width="80" height="15"/>
                <textElement><font size="9" isBold="true"/></textElement>
                <text><![CDATA[PERIODO:]]></text>
            </staticText>
            <textField>
                <reportElement x="80" y="80" width="200" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{fechaInicio} + " al " + $P{fechaFin}]]></textFieldExpression>
            </textField>

            <!-- Cantidad de acopios -->
            <staticText>
                <reportElement x="350" y="80" width="100" height="15"/>
                <textElement><font size="9" isBold="true"/></textElement>
                <text><![CDATA[ACOPIOS:]]></text>
            </staticText>
            <textField>
                <reportElement x="450" y="80" width="75" height="15"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{cantidadAcopios}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- CABECERA DE COLUMNAS -->
    <columnHeader>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="5" width="535" height="18" backcolor="#34495E"/>
                <graphicElement><pen lineWidth="0"/></graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="5" y="7" width="80" height="14" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Número]]></text>
            </staticText>

            <staticText>
                <reportElement x="90" y="7" width="70" height="14" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Fecha]]></text>
            </staticText>

            <staticText>
                <reportElement x="165" y="7" width="220" height="14" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Proveedor]]></text>
            </staticText>

            <staticText>
                <reportElement x="390" y="7" width="60" height="14" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Estado]]></text>
            </staticText>

            <staticText>
                <reportElement x="455" y="7" width="75" height="14" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Total (S/.)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- DETALLE (cada acopio) -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="5" y="2" width="80" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{numeroAcopio}]]></textFieldExpression>
            </textField>

            <textField pattern="dd/MM/yyyy">
                <reportElement x="90" y="2" width="70" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{fechaAcopio}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="165" y="2" width="220" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{proveedor.nombreCompleto}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="390" y="2" width="60" height="14"/>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{estado}]]></textFieldExpression>
            </textField>

            <textField pattern="'S/.' #,##0.00">
                <reportElement x="455" y="2" width="75" height="14"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalPagar}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="18" width="535" height="1"/>
                <graphicElement><pen lineStyle="Dotted"/></graphicElement>
            </line>
        </band>
    </detail>

    <!-- PIE DE PÁGINA (Total General) -->
    <summary>
        <band height="60">
            <rectangle>
                <reportElement x="350" y="10" width="180" height="30" backcolor="#E8F5E9"/>
                <graphicElement><pen lineWidth="2" lineColor="#27AE60"/></graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="360" y="15" width="100" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL GENERAL:]]></text>
            </staticText>

            <textField pattern="'S/.' #,##0.00">
                <reportElement x="460" y="15" width="65" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{totalGeneral}]]></textFieldExpression>
            </textField>
        </band>
    </summary>

</jasperReport>
